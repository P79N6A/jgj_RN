<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_f1f1f1"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <com.jizhi.jongg.widget.RoundeImageHashCodeTextLayout
                android:id="@+id/img_head"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:focusable="false"
                android:src="@drawable/icon_video"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/img_head"
                android:text="name"
                android:textColor="@color/color_333333"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/img_head"
                android:text="01:01"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/margin_12dp"/>

            <ImageView
                android:id="@+id/img_right"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/guide_image"/>

            <TextView
                android:id="@+id/tv_userinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/img_right"
                android:textColor="@color/color_999999"
                android:textSize="13dp"/>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_dbdbdb"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_inspect_name"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/notice_top_all"
                android:textColor="@color/color_333333"
                android:textSize="14sp"/>

            <View
                android:layout_width="1px"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_dbdbdb"/>

            <TextView
                android:id="@+id/tv_child_inspect_name"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="@string/notice_top2"
                android:textColor="@color/color_333333"
                android:textSize="14sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/color_dbdbdb"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/tv_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="5dp"
                android:text="000"
                android:textColor="@color/color_333333"
                android:textSize="13dp"/>


            <TextView
                android:id="@+id/tv_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="01:01"
                android:textColor="#ff0000"
                android:textSize="@dimen/margin_12dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="7.5dp"
            android:background="@color/color_f1f1f1"/>
    </LinearLayout>
</LinearLayout>