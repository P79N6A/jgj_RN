<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_top_style"
        android:minHeight="120dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="6dp"
            android:paddingTop="20dp"
            android:text="谁会收到这个报告"
            android:textColor="@color/gray_666666"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/gray_99999"
            android:textSize="@dimen/text_size_15" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="270dp"
        android:layout_height="@dimen/red_button_height"
        android:background="@drawable/dialog_bottom_style"
        android:text="@string/iam_sure"
        android:textColor="@color/white"
        android:textSize="@dimen/button_size">

    </Button>


</LinearLayout>
