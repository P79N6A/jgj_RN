<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/white"
    android:orientation="vertical">


    <com.jizhi.jlongg.main.custom.ImageViewTouchChangeAlpha
        android:id="@id/closeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="10dp"
        android:src="@drawable/close_icon" />

    <TextView
        android:id="@+id/downLoadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="正在下载..."
        android:textColor="@color/app_color"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/fileName"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/color_666666"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/draw_bg_f1f1f1_15radius">

        <View
            android:id="@+id/progress"
            android:layout_width="0dp"
            android:layout_height="7dp"
            android:background="@drawable/draw_bg_eb4e4e_15radius" />

    </LinearLayout>


    <com.jizhi.jlongg.main.custom.TextViewTouchChangeAlpha
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_gray_bottom_round_right"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/gray_525c68"
        android:textSize="@dimen/text_size_14" />


</LinearLayout>
