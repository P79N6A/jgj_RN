<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/color_f1f1f1"
        android:layout_height="75dp">


        <RelativeLayout
            android:id="@+id/rea_add_sub_projrct"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"

            android:background="@drawable/account_bg_dush">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加分项"
                android:button="@null"
                android:clickable="false"
                android:drawablePadding="8dp"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/icon_account_black_add"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rea_remark"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            style="@style/account_left_image"
            android:background="@drawable/icon_account_marks" />

        <TextView
            style="@style/account_left_text"
            android:text="备注" />


        <ImageView style="@style/account_right_arrow" />

        <TextView
            android:id="@+id/tv_remark"
            style="@style/account_right_text"
            android:hint="可填写备注信息" />
    </RelativeLayout>

    <ImageView style="@style/account_driver_1px" />
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

</LinearLayout>
