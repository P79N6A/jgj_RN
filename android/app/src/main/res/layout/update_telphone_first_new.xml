<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f1f1f1"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/head_only_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/telephone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:drawablePadding="30dp"
            android:drawableTop="@drawable/update_tel_first_icon"
            android:textColor="@color/color_333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/nextBtn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/draw_app_btncolor_5radius"
            android:onClick="onClick"
            android:text="更换手机号"
            android:textColor="@color/white"
            android:textSize="@dimen/button_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/isMyTelphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:text="更换手机号后，登录手机号将改变，你的数据不会有任何丢失"
            android:textColor="@color/color_666666"
            android:textSize="12sp" />
    </LinearLayout>


</LinearLayout>