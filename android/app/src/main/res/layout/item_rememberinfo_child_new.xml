<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/item_rememberinfo_group" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/rea_del"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/cb_del"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/checkbox_normal"
                    android:visibility="visible" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lin_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/rea_del"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/img_type"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/hour_worker_flag"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/img_remark"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/icon_remark"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/lin_h"
                android:text="name"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_15" />


            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="80dp"
                android:orientation="vertical"
                android:paddingLeft="40dp"
                android:paddingRight="30dp">

                <TextView
                    android:id="@+id/tv_worktime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="worktime"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_13"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/tv_overtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="overtime"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_13" />

                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_pro_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="项目名字"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/tv_billname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:text="role"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/text_size_13" />
                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>


        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/houtui" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:paddingBottom="15dp"
            android:layout_toLeftOf="@id/img_arrow"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_amounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="10000"
                android:textColor="@color/color_eb4e4e"
                android:textSize="@dimen/text_size_15"
                android:textStyle="bold" />

            <!--<TextView-->
            <!--android:id="@+id/tv_billname"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="right"-->
            <!--android:layout_toLeftOf="@id/img_arrow"-->
            <!--android:text="role"-->
            <!--android:textColor="@color/color_999999"-->
            <!--android:textSize="@dimen/text_size_13" />-->

        </LinearLayout>

        <!--<TextView-->
        <!--android:id="@+id/tv_billname"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_marginRight="30dp"-->
        <!--android:layout_marginBottom="10dp"-->
        <!--android:layout_toLeftOf="@id/img_arrow"-->
        <!--android:text="role"-->
        <!--android:textColor="@color/color_999999"-->
        <!--android:textSize="@dimen/text_size_13" />-->
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rea_draver1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin_center">

        <View style="@style/line" />
    </RelativeLayout>

</LinearLayout>