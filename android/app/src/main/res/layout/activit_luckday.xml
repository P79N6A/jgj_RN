<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f1f1f1"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <include layout="@layout/head_only_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/rea_seltype"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/listview_selector_white_gray"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/select_tyoe"
                        android:textColor="@color/gray_333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_seltype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="宜(动土)"
                        android:textColor="@color/gray_333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/houtui" />
                </LinearLayout>

                <View
                    style="@style/line"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <LinearLayout
                    android:id="@+id/rea_starttime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/listview_selector_white_gray"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/start_time"
                        android:textColor="@color/gray_333333"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/tv_starttime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="starttime"
                        android:textColor="@color/gray_333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/houtui" />

                </LinearLayout>

                <View
                    style="@style/line"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" />

                <LinearLayout
                    android:id="@+id/rea_endtime"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/listview_selector_white_gray"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/end_time"
                        android:textColor="@color/gray_333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_endtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="endtime"
                        android:textColor="@color/gray_333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/houtui" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_allday"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:background="@color/gray_f1f1f1"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/gray_99999"
                android:textSize="12dp" />

            <com.jizhi.jongg.widget.WrapListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>
