<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:background="@drawable/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/add_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_15dp"
            android:textColor="@color/gray_5f5f5f"
            android:textSize="@dimen/text_size_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_title"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:text="能及时将你的记账信息与对方同步，\n有利于对方更快与你在线对账，避免差异"
            android:textColor="@color/app_color"
            android:textSize="@dimen/text_size_12" />


        <com.jizhi.jlongg.main.custom.ImageViewTouchChangeAlpha
            android:id="@+id/closeIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/dialog_close" />
    </RelativeLayout>

    <View style="@style/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:background="@drawable/bg_gray_bottom_round_right"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <com.hcs.cityslist.widget.AppCursorEditText
            android:id="@+id/telph"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:background="@drawable/login_pwd_background"
            android:maxLength="11"
            android:numeric="integer"
            android:paddingLeft="10dp"
            android:textColorHint="@color/gray_cccccc"
            android:textSize="@dimen/text_size_14" />

        <com.hcs.cityslist.widget.AppCursorEditText
            android:id="@+id/nickname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:background="@drawable/login_pwd_background"
            android:maxLength="8"
            android:paddingLeft="10dp"
            android:textColorHint="@color/gray_cccccc"
            android:textSize="@dimen/text_size_14" />

        <Button
            android:id="@+id/btn_asscess"
            android:layout_width="match_parent"
            android:layout_height="@dimen/red_button_height"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:background="@drawable/draw_eb4e4e_5radius"
            android:text="@string/save"
            android:textColor="@color/white" />

    </LinearLayout>


</LinearLayout>
