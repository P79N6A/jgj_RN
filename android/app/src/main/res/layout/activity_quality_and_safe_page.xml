<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f1f1f1"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/navigation_guide_center_title" />

    <ImageView
        android:id="@+id/img_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/white"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/lin_rectification"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/listview_selector_white_gray"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="onClick">

                        <TextView
                            android:id="@+id/tv_rectification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/icon_quality_one"
                            android:drawablePadding="14dp"
                            android:gravity="center"
                            android:text="@string/notice_top2"
                            android:textColor="@color/color_666666" />

                    </LinearLayout>


                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:background="@color/color_dbdbdb" />

                    <LinearLayout
                        android:id="@+id/lin_review"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/listview_selector_white_gray"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="onClick">

                        <TextView
                            android:id="@+id/tv_review"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/icon_quality_two"
                            android:drawablePadding="14dp"
                            android:gravity="center"
                            android:text="@string/notice_top3"
                            android:textColor="@color/color_666666" />

                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:background="@color/color_dbdbdb" />

                    <LinearLayout
                        android:id="@+id/lin_complete"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/listview_selector_white_gray"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="onClick">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/icon_quality_compled"
                            android:drawablePadding="14dp"
                            android:gravity="center"
                            android:text="@string/complete"
                            android:textColor="@color/color_666666" />

                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:background="@color/color_dbdbdb" />

                    <LinearLayout
                        android:id="@+id/lin_statistics"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/listview_selector_white_gray"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="onClick">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@drawable/icon_quality_statistics"
                            android:drawablePadding="14dp"
                            android:gravity="center"
                            android:text="统计"
                            android:textColor="@color/color_666666" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_me_rectification"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/draw_listview_selector_white_gray_5radius"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/tv_me_rectification"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/icon_me_quality_one"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/notice_top6"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/view_circle_me_rectification"
                        style="@style/red_circle"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/houtui" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lin_me_review"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/draw_listview_selector_white_gray_5radius"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/tv_me_review"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/icon_me_quality_two"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/notice_top5"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/view_circle_me_review"
                        style="@style/red_circle"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/houtui" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_me_submit"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/draw_listview_selector_white_gray_5radius"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/tv_me_submit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/icon_me_quality_submit"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/notice_top4"
                        android:textColor="@color/color_333333"
                        android:textSize="16sp" />

                    <View
                        style="@style/red_circle"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/houtui" />

                </LinearLayout>
            </LinearLayout>

        </ScrollView>


        <LinearLayout
            android:id="@+id/lin_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="26dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.jizhi.jongg.widget.ShakeAnimBtn
                android:id="@+id/btn_send"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:clickable="true"
                android:onClick="onClick"
                android:src="@drawable/create_btn_normal" />

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/release_quality_question"
                android:textColor="@color/color_eb4e4e"
                android:textSize="20sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/team_closed_icon"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>