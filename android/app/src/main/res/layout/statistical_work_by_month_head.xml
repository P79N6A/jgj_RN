<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recordRoler"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fdf1e0"
        android:gravity="center"
        android:textColor="#f18215" />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/gray_f7f7f7"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/manhour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/red_circle_icon"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="上班："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/littleWorkAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/red_circle_icon"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="@string/littler_hour_tips"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/borrowAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/green_circle_icon"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="@string/borrowing_tips"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/balanceAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/green_circle_icon"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="@string/balance_tips"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/overTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/red_circle_icon"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="加班："
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/contractorWorkAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/red_circle_icon"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="@string/constrator_hour_tips"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/borrowTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/green_circle_icon"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="@string/borrowing_tips"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/balanceTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/green_circle_icon"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="@string/balance_tips"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>

    </LinearLayout>

