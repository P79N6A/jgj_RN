<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_f1f1f1"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ffffff_3radius"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">


            <RadioButton
                android:id="@+id/rb_name"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_toRightOf="@id/img_head"
                android:button="@null"
                android:drawableLeft="@drawable/icon_check_red"
                android:drawablePadding="10dp"
                android:lines="1"
                android:text="没周二质量检查每周三质量"
                android:textColor="@color/color_333333"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/img_head"
                android:background="@color/color_dbdbdb"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/img_head"
                android:lines="1"
                android:text="执行时间：2017-10-10 12：25"
                android:textColor="@color/color_999999"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/img_head"
                android:lines="1"
                android:ellipsize="end"
                android:text="执行人:王天宝，王辉，史章华"
                android:textColor="@color/color_999999"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/img_head"
                android:lines="1"
                android:text="检查项:15项检查"
                android:textColor="@color/color_999999"
                android:textSize="15sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/img_head"
                android:layout_marginTop="10dp"
                android:background="@color/color_dbdbdb"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/img_head"
                android:lines="1"
                android:text="通过率 8%"
                android:textColor="@color/color_333333"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/img_head"
                android:background="@drawable/bg_83c76e_3radius"
                android:gravity="center_vertical"
                android:lines="1"
                android:layout_centerVertical="true"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_marginRight="15dp"
                android:text="进行中80%"
                android:textColor="@color/white"
                android:textSize="13sp"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:background="@color/color_f1f1f1"/>
</LinearLayout>