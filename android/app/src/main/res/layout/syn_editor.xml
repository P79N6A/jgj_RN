<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/head_only_title" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_size_15" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:text="@string/realname"
                android:textColor="@color/gray_5f5f5f"
                android:textSize="@dimen/text_size_14" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_pwd_background"
                android:maxLength="10"
                android:paddingLeft="5dp"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_size_15" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:text="@string/mobile"
                android:textColor="@color/gray_5f5f5f"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/telph"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_pwd_background"
                android:gravity="center_vertical"
                android:maxLength="11"
                android:numeric="integer"
                android:paddingLeft="5dp"
                android:textColor="@color/gray_cccccc"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_size_15"
                android:visibility="invisible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginRight="@dimen/margin_10dp"
                android:text="@string/remark_sy"
                android:textColor="@color/gray_5f5f5f"
                android:textSize="@dimen/text_size_14" />

            <EditText
                android:id="@+id/remark"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_pwd_background"
                android:gravity="center_vertical"
                android:maxLength="8"
                android:paddingLeft="5dp"
                android:textColorHint="@color/gray_333333"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <Button
            android:id="@+id/save_update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:background="@drawable/button_press_effect"
            android:onClick="onClick"
            android:text="@string/save_update"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>