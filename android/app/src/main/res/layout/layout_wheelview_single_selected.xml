<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/app_color">

        <com.jizhi.jlongg.main.custom.ButtonTouchChangeAlpha
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:padding="8dip"
            android:text="@string/cancel"
            android:textColor="@android:color/white"
            android:textSize="@dimen/wheel_view_left_text_size" />

        <TextView
            android:id="@+id/tv_context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/wheel_view_center_text_size" />

        <com.jizhi.jlongg.main.custom.ButtonTouchChangeAlpha
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@android:color/white"
            android:textSize="@dimen/wheel_view_right_text_size" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/lin_hour_top"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:id="@+id/btn_zero_hour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/color_000000"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:background="@drawable/draw_pressed_f1f1f1_cccccc_3radius"
            android:text="休息/无加班"/>
        <Button
            android:id="@+id/btn_half_hour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:textColor="@color/color_000000"
            android:background="@drawable/draw_pressed_f1f1f1_cccccc_3radius"/>
        <Button
            android:id="@+id/btn_one_hour"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:textColor="@color/color_000000"
            android:background="@drawable/draw_pressed_f1f1f1_cccccc_3radius"/>
    </LinearLayout>

    <com.jizhi.wheelview.WheelView
        android:id="@+id/wheel_project_type"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@android:color/white" />
</LinearLayout>