<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f1f1f1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/wantCooperationRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/tip_red"
            android:drawablePadding="10dp"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

    </LinearLayout>

    <View style="@style/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/star1Text"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="工作态度"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_15" />

        <com.jizhi.jongg.widget.StarBar
            android:id="@+id/workingAttitudeStarBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ratingbar:starCount="5"
            ratingbar:starDistance="16dp"
            ratingbar:starEmpty="@drawable/star_empty"
            ratingbar:starFill="@drawable/star_full"
            ratingbar:starSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/star2Text"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="专业技能"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_15" />

        <com.jizhi.jongg.widget.StarBar
            android:id="@+id/professionalSkillsStarBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ratingbar:starCount="5"
            ratingbar:starDistance="16dp"
            ratingbar:starEmpty="@drawable/star_empty"
            ratingbar:starFill="@drawable/star_full"
            ratingbar:starSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="靠谱程度"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_15" />

        <com.jizhi.jongg.widget.StarBar
            android:id="@+id/degreeOfReliabilitystarBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ratingbar:starCount="5"
            ratingbar:starDistance="16dp"
            ratingbar:starEmpty="@drawable/star_empty"
            ratingbar:starFill="@drawable/star_full"
            ratingbar:starSize="16dp" />

    </LinearLayout>

    <View
        style="@style/line"
        android:layout_marginTop="18dp" />

    <com.jizhi.jongg.widget.FlowTagView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tagView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:visibility="gone"
        app:lineSpacing="10dp"
        app:tagSpacing="10dp" />

    <com.jizhi.jongg.widget.AppDiverView
        android:id="@+id/tagViewLine"
        style="@style/line"
        android:visibility="gone" />


</LinearLayout>