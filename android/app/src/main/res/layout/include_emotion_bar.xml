<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_dbdbdb"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="10dp">


        <LinearLayout
            android:id="@+id/rl_editbar_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_bg_reply_edittext"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="3dp"
            android:paddingRight="3dp">

            <EditText
                android:id="@+id/bar_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@drawable/chat_room_edit_white"
                android:gravity="center_vertical"
                android:hint="请输入回复内容"
                android:maxHeight="100dp"
                android:maxLength="500"
                android:minHeight="35dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:textColorHint="@color/color_cccccc"
                android:textSize="16sp"/>


        </LinearLayout>

        <ImageView
            android:id="@+id/emotion_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="7dp"
            android:clickable="true"
            android:src="@drawable/icon_emoji"/>

        <com.jizhi.jlongg.main.custom.ImageViewTouchChangeAlpha
            android:id="@+id/bar_image_add_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="6dp"
            android:src="@drawable/icon_msg_pic"
            android:visibility="visible"/>

        <Button
            android:id="@+id/bar_btn_send"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/chat_room_edit"
            android:gravity="center"
            android:includeFontPadding="false"
            android:onClick="onClick"
            android:text="@string/reply"
            android:textColor="@color/color_666666"
            android:textSize="15sp"
            android:visibility="visible"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_horizontal_line_color"/>


</LinearLayout>