<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rea_pop_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/rea_pop_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/draw_dialog_share_bg_10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <com.jizhi.jlongg.main.custom.TextViewTouchChangeAlpha
                    android:id="@+id/send_message_to_app"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/share_to_app"
                    android:gravity="center"
                    android:text="发送给\n吉工家好友"
                    android:textColor="@color/gray_666666"
                    android:textSize="11sp" />

                <com.jizhi.jlongg.main.custom.TextViewTouchChangeAlpha
                    android:id="@+id/share_to_worker_circle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/share_to_work_circle"
                    android:gravity="center"
                    android:text="分享到\n工友圈"
                    android:textColor="@color/gray_666666"
                    android:textSize="11sp" />

                <com.jizhi.jlongg.main.custom.TextViewTouchChangeAlpha
                    android:id="@+id/send_to_wechat_friend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/umeng_socialize_wechat"
                    android:gravity="center"
                    android:text="分享给\n微信好友"
                    android:textColor="@color/gray_666666"
                    android:textSize="11sp" />

                <com.jizhi.jlongg.main.custom.TextViewTouchChangeAlpha
                    android:id="@+id/send_to_wechat_friend_circle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/umeng_socialize_wxcircle"
                    android:gravity="center"
                    android:text="分享到\n微信朋友圈"
                    android:textColor="@color/gray_666666"
                    android:textSize="11sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <com.jizhi.jlongg.main.custom.TextViewTouchChangeAlpha
                    android:id="@+id/send_to_qq"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/umeng_socialize_qq_on"
                    android:gravity="center"
                    android:text="分享给\nQQ好友"
                    android:textColor="@color/gray_666666"
                    android:textSize="11sp" />

                <com.jizhi.jlongg.main.custom.TextViewTouchChangeAlpha
                    android:id="@+id/send_to_qzone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/umeng_socialize_qzone_on"
                    android:gravity="center"
                    android:text="分享到\nQQ空间"
                    android:textColor="@color/gray_666666"
                    android:textSize="11sp" />

                <com.jizhi.jlongg.main.custom.TextViewTouchChangeAlpha
                    android:id="@+id/face_to_face_send"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/icon_share_facetoface"
                    android:gravity="center"
                    android:text="面对面分享"
                    android:textColor="@color/gray_666666"
                    android:textSize="11sp" />

                <com.jizhi.jlongg.main.custom.TextViewTouchChangeAlpha
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="5dp"
                    android:drawableTop="@drawable/icon_share_facetoface"
                    android:gravity="center"
                    android:text="面对面分享"
                    android:textColor="@color/gray_666666"
                    android:textSize="11sp"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>

        <com.jizhi.jlongg.main.custom.TextViewTouchChangeAlpha
            android:id="@+id/tv_savephoto_to_album"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/draw_dialog_share_bg_10dp"
            android:gravity="center"
            android:text="@string/savephoto_to_album"
            android:textColor="@color/color_333333"
            android:textSize="18sp" />

        <com.jizhi.jlongg.main.custom.TextViewTouchChangeAlpha
            android:id="@+id/tv_calcel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/draw_dialog_share_bg_10dp"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_666666"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>