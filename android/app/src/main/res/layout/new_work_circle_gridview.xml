<?xml version="1.0" encoding="utf-8"?>
<com.jizhi.jlongg.main.custom.RelativeLayoutChangeAlpha xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/menuIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/menuText"
        style="@style/work_circle_text"
        android:layout_below="@id/menuIcon"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/redCircle"
        style="@style/red_circle"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/menuIcon" />

</com.jizhi.jlongg.main.custom.RelativeLayoutChangeAlpha>