<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="140dp"
        android:background="@drawable/dialog_top_style"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:lineSpacingExtra="5dip"
            android:text="恭喜你获得15天黄金服务版免费体验权"
            android:textColor="@color/gray_666666"
            android:textSize="@dimen/text_size_15" />

        <com.jizhi.jlongg.main.custom.LinearLayoutChangeAlpha
            android:id="@+id/versionIntroduceLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="了解黄金服务版"
                android:textColor="@color/color_eb4e4e"
                android:textSize="@dimen/text_size_15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_eb4e4e" />

        </com.jizhi.jlongg.main.custom.LinearLayoutChangeAlpha>


    </LinearLayout>

    <View
        android:id="@+id/view"
        style="@style/line" />

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="@dimen/red_button_height"
        android:layout_below="@id/view"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_gray_bottom_round_right"
        android:orientation="horizontal">

        <com.jizhi.jlongg.main.custom.TextViewTouchChangeAlpha
            android:id="@+id/redBtn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/gray_525c68"
            android:textSize="@dimen/text_size_14" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray_dbdbdb" />

        <com.jizhi.jlongg.main.custom.TextViewTouchChangeAlpha
            android:id="@+id/btn_asscess"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确认升级版本"
            android:textColor="@color/app_color"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>


</LinearLayout>