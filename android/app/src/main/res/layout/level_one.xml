<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="01"
                android:textColor="@color/gray_666666"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/month"
                android:text="2016"
                android:textColor="@color/gray_acacac"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_toRightOf="@id/layout1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/income_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:background="@drawable/bg_pk_ffcccc"></RelativeLayout>


                <TextView
                    android:id="@+id/income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textSize="@dimen/text_size_10" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp">

                <RelativeLayout
                    android:id="@+id/cash_advance_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:background="@drawable/bg_gn_b2ead0_sk1px"></RelativeLayout>

                <TextView
                    android:id="@+id/cash_advance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:textSize="@dimen/text_size_10" />
            </RelativeLayout>
        </LinearLayout>


        <ImageView
            android:id="@+id/head"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_toLeftOf="@id/head"
            >

            <TextView
                android:id="@+id/real_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/red_f75a23"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/real_income"
                android:textColor="@color/gray_acacac"
                android:textSize="@dimen/text_size_11" />
        </RelativeLayout>
    </RelativeLayout>


    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/gray_f1f1f1" />


</LinearLayout>