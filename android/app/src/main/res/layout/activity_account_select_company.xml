<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/main_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_f1f1f1"
              android:fitsSystemWindows="true"
              android:orientation="vertical">

    <include layout="@layout/head_only_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.6"
            android:background="@drawable/account_white_background"
            android:orientation="horizontal">

            <com.hcs.cityslist.widget.ClearEditText
                android:id="@+id/ed_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/account_input_number"
                android:maxLength="6"
                android:inputType="numberDecimal"
                android:digits="0123456789."
                android:textColorHint="@color/gray_cccccc"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rea_company"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.4"
            android:background="@drawable/account_white_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="A"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_14"/>

            <ImageView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_triangle_do"
                android:gravity="center_vertical"
                android:textColor="@color/color_333333"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
