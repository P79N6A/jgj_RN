<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_f1f1f1"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/year_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_weight="1"
            android:background="@color/gray_dbdbdb" />

        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:textColor="@color/gray_333333" />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_weight="1"
            android:background="@color/gray_dbdbdb" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/year_layout"
        android:layout_marginTop="23dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_15dp"
        android:paddingRight="@dimen/margin_15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="上班工时:"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size_10" />

                <TextView
                    android:id="@+id/totalManhour"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="加班工时:"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size_10" />

                <TextView
                    android:id="@+id/overTime"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_12" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/income"
                android:textColor="@color/gray_99999"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/borrow"
                android:textColor="@color/gray_99999"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/account_laborage"
                android:textColor="@color/gray_99999"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/outstanding_wages_colon"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/text_size_11" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="76dp"
            android:layout_marginLeft="15dp"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sumPayableValue"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/gray_666666"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/sumBorrowValue"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/green"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/sumBalance"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/green"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/realIncomeValue"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_size_11" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:src="@drawable/houtui" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/year_layout"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_white_20radius"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_15dp"
        android:paddingRight="@dimen/margin_15dp">

        <TextView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_333333"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@id/total_poor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:textSize="@dimen/text_size_12" />

    </LinearLayout>

</RelativeLayout>