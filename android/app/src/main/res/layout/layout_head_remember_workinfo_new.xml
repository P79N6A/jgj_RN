<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"

        android:paddingLeft="15dp"
        android:paddingRight="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView style="@style/view_oval" />

                <TextView
                    android:id="@+id/tv_hour_main_hour"
                    style="@style/view_textview_000000_13sp"
                    android:text="上班0个工" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_1"
                    style="@style/view_oval" />

                <TextView
                    android:id="@+id/tv_1"
                    style="@style/view_textview_000000_13sp"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/iv_1"
                    android:text="点工:" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_hour_money"
                    style="@style/view_textview_000000_13sp"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:layout_toRightOf="@id/tv_1"
                    android:text="0.00"
                    android:textColor="@color/color_eb4e4e" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView style="@style/view_oval" />

                <TextView
                    android:id="@+id/tv_hour_work_hour"
                    style="@style/view_textview_000000_13sp"
                    android:text="加班0个工" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_2"
                    style="@style/view_oval" />

                <TextView
                    android:id="@+id/tv_account_type"
                    style="@style/view_textview_000000_13sp"
                    android:layout_width="wrap_content"

                    android:layout_toRightOf="@id/iv_2"
                    android:text="包工(分包):" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/tv_subcontract_work_money"
                    style="@style/view_textview_000000_13sp"
                    android:layout_toRightOf="@id/tv_account_type"
                    android:text="0.00"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_eb4e4e" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rea_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">


            <RelativeLayout
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_3"
                    style="@style/view_oval"
                    android:background="@drawable/draw_oval_83c76e" />

                <TextView
                    android:id="@+id/tv_3"
                    style="@style/view_textview_000000_13sp"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/iv_3"
                    android:text="包工(承包):" />

                <TextView
                    android:id="@+id/tv_all_work_money"
                    android:layout_marginLeft="10dp"
                    style="@style/view_textview_000000_13sp"
                    android:layout_toRightOf="@id/tv_3"
                    android:text="0.00"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:textColor="@color/color_83c76e" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    style="@style/view_oval"
                    android:background="@drawable/draw_oval_83c76e" />

                <TextView
                    android:id="@+id/tv_borrowing_count"
                    style="@style/view_textview_000000_13sp"
                    android:text="借支" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_4"
                    style="@style/view_oval"
                    android:background="@drawable/draw_oval_83c76e" />

                <TextView
                    android:id="@+id/tv_4"
                    style="@style/view_textview_000000_13sp"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/iv_4"
                    android:text="借支:" />

                <TextView
                    android:id="@+id/tv_borrowing_money"
                    android:layout_marginLeft="10dp"
                    style="@style/view_textview_000000_13sp"
                    android:layout_toRightOf="@id/tv_4"
                    android:text="0.00"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_83c76e" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    style="@style/view_oval"
                    android:background="@drawable/draw_oval_83c76e" />

                <TextView
                    android:id="@+id/tv_wage_count"
                    style="@style/view_textview_000000_13sp"
                    android:text="结算" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_5"
                    style="@style/view_oval"
                    android:background="@drawable/draw_oval_83c76e" />

                <TextView
                    android:id="@+id/tv_5"
                    style="@style/view_textview_000000_13sp"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/iv_5"
                    android:text="结算:" />

                <TextView
                    android:id="@+id/tv_wage_money"
                    style="@style/view_textview_000000_13sp"
                    android:layout_toRightOf="@id/tv_5"
                    android:layout_marginLeft="10dp"
                    android:text="0.00"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_83c76e" />
            </RelativeLayout>
        </RelativeLayout>

        <!--<View style="@style/line" />-->

        <RadioButton
            android:id="@+id/rb_statistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:button="@null"
            android:drawableRight="@drawable/houtui"
            android:drawablePadding="5dp"
            android:text="查看更多统计"
            android:textColor="@color/color_333333"
            android:textSize="12sp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_nodata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_fafafa"
        android:visibility="visible">


        <include layout="@layout/layout_line_10px" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:background="@drawable/icon_nodata" />


        <TextView
            android:id="@+id/tv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="未搜索到相关内容"
            android:textColor="@color/gray_b9b9b9"
            android:textSize="@dimen/text_size_18" />
    </RelativeLayout>
</LinearLayout>