<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.hcs.cityslist.widget.AppCursorEditText
            android:id="@+id/inputCheckContentEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/input_check_point_hint"
            android:lineSpacingExtra="2dp"
            android:maxLength="30"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            android:textColor="@color/color_666666"
            android:textColorHint="@color/color_cccccc"
            android:textSize="15sp" />

        <View
            android:layout_width="1px"
            android:layout_height="26dp"
            android:layout_marginLeft="10dp"
            android:background="@color/color_dbdbdb" />

        <com.jizhi.jlongg.main.custom.RelativeLayoutChangeAlpha
            android:id="@+id/deleteCheckContentIcon"
            android:layout_width="48dp"
            android:layout_height="48dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/delete_check_content" />

        </com.jizhi.jlongg.main.custom.RelativeLayoutChangeAlpha>


    </LinearLayout>

    <View
        android:id="@+id/divierLine"
        style="@style/line" />


</LinearLayout>