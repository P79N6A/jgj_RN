<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.75"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="@dimen/head_height"
            android:background="@color/color_3a3f4e"
            android:visibility="gone">

            <com.jizhi.jlongg.main.custom.TextViewTouchChangeAlpha
                android:id="@+id/returnText"
                style="@style/navigation_red_return_attribute_white" />

            <TextView
                android:id="@id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/recordMerit"
                android:textColor="@color/white"
                android:textSize="@dimen/guide_title_size" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/workFlowLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:src="@drawable/bg_accont_guide" />


    </LinearLayout>


</RelativeLayout>