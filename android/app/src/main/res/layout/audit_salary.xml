<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <View
        android:id="@+id/itemDiver"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_dbdbdb" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/gray_99999"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="6dp">

        <TextView
            android:id="@+id/tv_title1"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:text="正常"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_worktime_my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="8小时"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text_size_14" />


        <TextView
            android:id="@+id/tv_worktime_other"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="8小时"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_title2"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="加班"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_overtime_my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="8小时"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text_size_14" />


        <TextView
            android:id="@+id/tv_overtime_other"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="8小时"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white" />

</LinearLayout>