<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/draw_listview_selector_white_gray"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/catalog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f1f1f1"
        android:paddingBottom="5dip"
        android:paddingLeft="14dip"
        android:paddingTop="5dip"
        android:textColor="@color/color_cccccc"
        android:textSize="@dimen/catalog_size"
        android:visibility="gone" />

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/color_f1f1f1"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">

        <com.jizhi.jongg.widget.RoundeImageHashCodeTextLayout
            android:id="@id/roundImageHashText"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_14" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="35dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/isRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/is_register" />

            <ImageView
                android:id="@+id/isSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_gou" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/itemDiver"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/color_dbdbdb" />


</LinearLayout>
