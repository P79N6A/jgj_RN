<?xml version="1.0" encoding="utf-8"?>
<com.jizhi.jlongg.main.custom.LinearLayoutChangeAlpha xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f9f9f9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/expandStateIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/expandStateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/color_666666"
            android:textSize="13sp" />

    </LinearLayout>


    <View style="@style/line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f1f1f1" />

</com.jizhi.jlongg.main.custom.LinearLayoutChangeAlpha>