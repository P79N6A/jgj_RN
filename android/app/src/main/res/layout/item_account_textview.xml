<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f1f1f1"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rea_layout"
        android:layout_width="match_parent"
        android:minHeight="55dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingTop="@dimen/margin_10dp"
        android:paddingBottom="@dimen/margin_10dp"
        android:paddingRight="20dp">

        <include layout="@layout/layout_accout_hout_worktime_hint"
            android:visibility="gone"
            android:id="@+id/hout_work_time_hinet"/>

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/icon_account_role"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/img_icon"
            android:text="title"
            android:textColor="@color/color_333333"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/view_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:background="@drawable/houtui"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/view_right"
            android:layout_toRightOf="@id/tv_title"
            android:gravity="right|center_vertical"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/ed_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:maxLines="1"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rea_unAccountCountLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:visibility="gone">

        <com.jizhi.jlongg.main.custom.LinearLayoutChangeAlpha
            android:id="@+id/unAccountCountLayout"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/bg_f9a00f_20_radius"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClick"
            android:visibility="visible">

            <TextView
                android:id="@+id/unAccountCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="15dp"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/confirmIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/houtui" />

        </com.jizhi.jlongg.main.custom.LinearLayoutChangeAlpha>
    </RelativeLayout>

    <ImageView
        android:id="@+id/view_1px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/color_dbdbdb"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />

    <RelativeLayout
        android:id="@+id/view_10px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <include layout="@layout/layout_line_10px" />
    </RelativeLayout>


</LinearLayout>
