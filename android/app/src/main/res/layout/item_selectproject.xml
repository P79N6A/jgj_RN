<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_10dp"
    android:paddingRight="@dimen/margin_15dp">

    <LinearLayout
        android:id="@+id/rea_project"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/proNameEdit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/login_pwd_background"
                android:hint="请输入项目名称"
                android:maxLength="20"
                android:paddingLeft="10dp"
                android:textColorHint="@color/color_cccccc"
                android:textSize="@dimen/text_size_14"
                android:visibility="gone" />

            <TextView
                android:id="@+id/proNameTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/exist_pro_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="已有班组"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_13" />

        </LinearLayout>

        <com.jizhi.jlongg.main.custom.TextViewTouchChangeAlpha
            android:id="@+id/btnSave"
            android:layout_width="62dp"
            android:layout_height="38dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_gy_333333_3radius"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/gray_333333"
            android:textSize="@dimen/text_size_12"
            android:visibility="gone" />

        <com.jizhi.jlongg.main.custom.TextViewTouchChangeAlpha
            android:id="@+id/btnUpdate"
            android:layout_width="62dp"
            android:layout_height="26dp"
            android:background="@drawable/bg_gy_333333_3radius"
            android:gravity="center"
            android:text="修改"
            android:textColor="@color/gray_333333"
            android:textSize="@dimen/text_size_12"
            android:visibility="gone" />

        <com.jizhi.jlongg.main.custom.TextViewTouchChangeAlpha
            android:id="@+id/btnDelete"
            android:layout_width="62dp"
            android:layout_height="26dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_gy_333333_3radius"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="@color/gray_333333"
            android:textSize="@dimen/text_size_12"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/isSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/red_g"
            android:visibility="gone" />

    </LinearLayout>

    <View
        android:id="@+id/itemDiver"
        style="@style/line" />

</LinearLayout>