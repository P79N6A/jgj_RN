<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f1f1f1"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/navigation_guide_center_title" />

    <com.jizhi.jongg.widget.AppDiverView
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:id="@+id/set_replace_foreman_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/listview_selector_white_gray"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="设置代班长"
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/set_replace_foreman_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/houtui"
            android:gravity="center_vertical|right"
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

    </LinearLayout>

    <View style="@style/line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="代班时间"
        android:textColorHint="@color/color_999999"
        android:textSize="13sp" />

    <View style="@style/line" />


    <LinearLayout
        android:id="@+id/start_time_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/listview_selector_white_gray"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="开始时间"
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/start_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/houtui"
            android:gravity="center_vertical|right"
            android:hint="请选择代班开始时间"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        style="@style/line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:id="@+id/end_time_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/listview_selector_white_gray"
        android:clickable="true"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="结束时间"
            android:textColor="@color/color_333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/end_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/houtui"
            android:gravity="center_vertical|right"
            android:hint="请选择代班结束时间"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:textSize="13sp" />

    </LinearLayout>

    <View style="@style/line" />

    <Button
        android:id="@+id/red_btn"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/red_button_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        android:clickable="true"
        android:textSize="@dimen/button_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="说明信息:"
        android:textColorHint="@color/color_999999"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/set_replace_foreman_tips"
        android:textColorHint="@color/color_999999"
        android:textSize="13sp" />


</LinearLayout>