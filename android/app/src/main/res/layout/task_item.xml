<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_selector_white_gray"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.jizhi.jongg.widget.RoundeImageHashCodeTextLayout
            android:id="@+id/publishUserIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/publishUserName"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_toRightOf="@id/publishUserIcon"
            android:gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/publishTime"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/publishUserName"
            android:layout_toRightOf="@id/publishUserIcon"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_13" />


        <ImageView
            android:id="@+id/clickIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/houtui" />

        <TextView
            android:id="@+id/principalUserInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/clickIcon"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/text_size_13" />

    </RelativeLayout>

    <View
        style="@style/line"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/taskContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/color_333333"
        android:textSize="15sp" />


    <com.jizhi.jongg.widget.HorizotalImageLayout
        android:id="@+id/taskImagesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">


    </com.jizhi.jongg.widget.HorizotalImageLayout>

    <RelativeLayout
        android:id="@+id/completeTimeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <View style="@style/line" />

        <TextView
            android:id="@+id/completeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_f9a00f"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/taskLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_333333"
            android:textSize="13sp" />

    </RelativeLayout>


</LinearLayout>