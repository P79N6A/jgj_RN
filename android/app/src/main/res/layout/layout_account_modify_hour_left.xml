<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/layout_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/icon_bubble_left_white_normal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_account_timer"/>

            <TextView
                android:id="@+id/tv_change_account_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="2020-20-20"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_modify_type_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="新增记账"
                android:textStyle="bold"
                android:textColor="@color/color_1892e7"
                android:textSize="13sp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_modify_date_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:text="2020-20-20"
            android:textColor="@color/color_666666"
            android:textSize="13sp"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_type_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/hour_worker_flag"/>

            <TextView
                android:id="@+id/tv_name_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/img_type_left"
                android:text="name"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_15"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_worktime_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="worktime"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_13"/>

                <TextView
                    android:id="@+id/tv_overtime_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="overtime"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_13"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_amounts_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="10000"
                android:textColor="@color/color_eb4e4e"
                android:textSize="@dimen/text_size_15"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/img_arrow_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/houtui"
                android:text="100"
                android:textColor="@color/black"
                android:textSize="13sp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="20dp">

            <TextView
                android:id="@+id/tv_proname_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="80dp"
                android:text="借支"
                android:textColor="@color/color_999999"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tv_role_name_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:text="100"
                android:textColor="@color/color_999999"
                android:textSize="13sp"/>
        </RelativeLayout>

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tv_del_text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"
            android:text="100"
            android:textColor="@color/color_f9a00f"
            android:textSize="13sp"/>
    </LinearLayout>

</merge>
