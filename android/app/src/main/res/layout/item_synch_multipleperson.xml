<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/draw_listview_selector_white_gray"
    android:orientation="vertical">

    <TextView
        android:id="@+id/catalog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f1f1f1"
        android:paddingBottom="5dip"
        android:paddingLeft="16dip"
        android:paddingTop="5dip"
        android:textColor="@color/color_cccccc"
        android:textSize="@dimen/catalog_size"
        android:visibility="gone" />

    <View
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="7dp"
        android:background="@color/color_f1f1f1"
        android:visibility="gone"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/seletedImage"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/checkbox_normal" />

        <com.jizhi.jongg.widget.RoundeImageHashCodeTextLayout
            android:id="@+id/roundImageHashText"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="唐"
            android:textColor="@android:color/white"
            android:textSize="@dimen/first_name_size" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/text_size_14" />

                <View
                    android:id="@+id/line"
                    android:layout_width="1px"
                    android:layout_height="14dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:background="@color/color_dbdbdb"></View>

                <TextView
                    android:id="@+id/descript"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/telph"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>


        <TextView
            android:id="@+id/synchState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="已同步"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_12"
            android:visibility="gone"></TextView>

    </LinearLayout>
</LinearLayout>
