<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
        android:id="@+id/rea_context1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_hint_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:text="textview"
            android:textColor="@color/color_999999"
            android:textIsSelectable="true"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:autoLink="web"
            android:lineSpacingExtra="1.2dp"
            android:paddingRight="10dp"
            android:textColor="@color/color_333333"
            android:textColorLink="@color/blue_46a6ff"
            android:textIsSelectable="true"
            android:textSize="15sp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/rea_context2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_hint_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="textview"
            android:textColor="@color/color_999999"
            android:textSize="15sp"/>


        <TextView
            android:id="@+id/tv_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:autoLink="web"
            android:lineSpacingExtra="1.2dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/color_333333"
            android:textColorLink="@color/blue_46a6ff"
            android:textIsSelectable="true"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rea_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_hint_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="textview"
            android:textColor="@color/color_999999"
            android:textSize="15sp"/>

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_log_location"/>

            <TextView
                android:layout_toRightOf="@id/img_loc"
                android:id="@+id/tv_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:lineSpacingExtra="1.2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/color_333333"
                android:textColorLink="@color/blue_46a6ff"
                android:textIsSelectable="true"
                android:textSize="15sp"/>

        </RelativeLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rea_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="12dp"
            android:background="@drawable/drawable_rectangle_c8c8c8_f1f1f1"
            android:orientation="horizontal"
            android:paddingRight="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.13"
                android:ems="1"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:text="天气"
                android:textColor="@color/color_999999"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.97"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_weather_morning"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@color/color_f1f1f1"
                    android:gravity="center"
                    android:textColor="@color/color_666666"
                    android:textColorHint="@color/color_cccccc"
                    android:textSize="12sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/tv_weather_afternoon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@color/color_f1f1f1"
                    android:gravity="center"
                    android:maxLength="1000"
                    android:textColor="@color/color_666666"
                    android:textColorHint="@color/color_cccccc"
                    android:textSize="12sp"/>
            </LinearLayout>

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/white"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.13"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:text="温度\n℃"
                android:textColor="@color/color_999999"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_temperature_morning"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@color/color_f1f1f1"
                    android:gravity="center"
                    android:maxLength="10"
                    android:textColor="@color/color_666666"
                    android:textColorHint="@color/color_cccccc"
                    android:textSize="12sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/tv_temperature_afternoon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@color/color_f1f1f1"
                    android:gravity="center"
                    android:maxLength="10"
                    android:textColor="@color/color_666666"
                    android:textColorHint="@color/color_cccccc"
                    android:textSize="12sp"/>
            </LinearLayout>

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.13"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:text="风力\n(级)"
                android:textColor="@color/color_999999"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_wind_morning"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@color/color_f1f1f1"
                    android:gravity="center"
                    android:maxLength="10"
                    android:textColor="@color/color_666666"
                    android:textColorHint="@color/color_cccccc"
                    android:textSize="12sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/tv_wind_afternoon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@color/color_f1f1f1"
                    android:gravity="center"
                    android:maxLength="10"
                    android:textColor="@color/color_666666"
                    android:textColorHint="@color/color_cccccc"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/color_dbdbdb"/>
</LinearLayout>