<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/redTipsIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/tip_red"
            android:visibility="gone" />

        <TextView
            android:id="@+id/checkContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:lineSpacingExtra="2dp"
            android:maxLength="30"
            android:textColor="@color/color_666666"
            android:textSize="15sp" />

        <View
            android:id="@+id/deleteIconLine"
            android:layout_width="1px"
            android:layout_height="26dp"
            android:layout_marginLeft="10dp"
            android:background="@color/color_dbdbdb" />

        <com.jizhi.jlongg.main.custom.RelativeLayoutChangeAlpha
            android:id="@+id/deleteCheckContentIcon"
            android:layout_width="50dp"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/delete_check_content" />

        </com.jizhi.jlongg.main.custom.RelativeLayoutChangeAlpha>


    </LinearLayout>

    <View
        android:id="@+id/divierLine"
        style="@style/line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <View
        android:id="@+id/divierBackground"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f1f1f1"
        android:visibility="gone" />


</LinearLayout>