<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    android:paddingRight="10dp">

    <ImageView style="@style/navigationPopwindow_sanjiao" />

    <LinearLayout style="@style/navigationPopwindowLayout">

        <com.jizhi.jlongg.main.custom.RelativeLayoutChangeAlpha
            android:id="@+id/new_friend_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/add_friend" />

            <TextView
                android:id="@+id/new_friend_text"
                style="@style/navigationPopwindowTextview"
                android:layout_toRightOf="@id/icon1"
                android:text="@string/new_friend" />

            <View
                style="@style/navigationPopwindowItem"
                android:layout_below="@id/new_friend_text"
                android:layout_toRightOf="@id/icon1" />

        </com.jizhi.jlongg.main.custom.RelativeLayoutChangeAlpha>

        <com.jizhi.jlongg.main.custom.RelativeLayoutChangeAlpha
            android:id="@+id/add_friend_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/new_friend_popwindow" />

            <TextView
                android:id="@+id/add_friend_text"
                style="@style/navigationPopwindowTextview"
                android:layout_toRightOf="@id/icon4"
                android:text="@string/add_friend" />

            <View
                style="@style/navigationPopwindowItem"
                android:layout_below="@id/add_friend_text"
                android:layout_toRightOf="@id/icon4" />

        </com.jizhi.jlongg.main.custom.RelativeLayoutChangeAlpha>

        <com.jizhi.jlongg.main.custom.RelativeLayoutChangeAlpha
            android:id="@+id/contact_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/contact_icon" />

            <TextView
                android:id="@+id/contact_text"
                style="@style/navigationPopwindowTextview"
                android:layout_toRightOf="@id/icon2"
                android:text="@string/contact" />

            <View
                style="@style/navigationPopwindowItem"
                android:layout_below="@id/contact_text"
                android:layout_toRightOf="@id/icon2" />

        </com.jizhi.jlongg.main.custom.RelativeLayoutChangeAlpha>

        <com.jizhi.jlongg.main.custom.RelativeLayoutChangeAlpha
            android:id="@+id/group_chat_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/initiate_group_chat" />

            <TextView
                style="@style/navigationPopwindowTextview"
                android:layout_toRightOf="@id/icon5"
                android:text="@string/initiate_group_chat" />

        </com.jizhi.jlongg.main.custom.RelativeLayoutChangeAlpha>

        <com.jizhi.jlongg.main.custom.RelativeLayoutChangeAlpha
            android:id="@+id/scan_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/scan_icon_popwindow" />

            <TextView
                android:id="@+id/scan_text"
                style="@style/navigationPopwindowTextview"
                android:layout_toRightOf="@id/icon3"
                android:text="@string/scan" />

            <View
                style="@style/navigationPopwindowItem"
                android:layout_below="@id/scan_text"
                android:layout_toRightOf="@id/icon3" />

        </com.jizhi.jlongg.main.custom.RelativeLayoutChangeAlpha>


    </LinearLayout>


</LinearLayout>