<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_dbdbdb" />

    <LinearLayout
        android:id="@+id/groupChat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/listview_selector_white_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/team_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/group_chat"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/color_dbdbdb" />

    <LinearLayout
        android:id="@+id/workCircle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/listview_selector_white_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/group_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/work_circle"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_15" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/color_dbdbdb" />

    <LinearLayout
        android:id="@+id/newFriendLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/listview_selector_white_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/new_friend_icon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="@string/new_friend"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_15" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="37dp">

            <com.jizhi.jongg.widget.RoundeImageHashCodeTextLayout
                android:id="@+id/newFriendWeight"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true" />

            <View
                android:id="@+id/newFriendCountText"
                style="@style/red_circle"
                android:layout_marginLeft="-5dp"
                android:layout_toRightOf="@id/newFriendWeight"
                android:visibility="gone" />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>