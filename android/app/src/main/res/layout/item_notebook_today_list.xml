<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ebebeb"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/img_line"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/color_ebebeb"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/rea_right"
        android:background="@drawable/bg_ffffff_3radius"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_impor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_notebook_list_important"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp"
                android:maxLines="5"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:text="00000"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />
        </RelativeLayout>


        <com.jizhi.jongg.widget.HorizotalImageLayout
            android:id="@+id/ngl_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:cacheColorHint="#00000000"
            android:horizontalSpacing="1dp"
            android:listSelector="#00000000"
            android:numColumns="4"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:verticalSpacing="1dp"
            android:visibility="visible" />


        <RelativeLayout
            android:id="@+id/rea_important"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_f1f1f1_5radius"
            android:paddingLeft="10dp"
            android:visibility="visible">

            <RadioButton
                android:id="@+id/rb_important"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:button="@null"
                android:clickable="false"
                android:drawableLeft="@drawable/radio_notebook_important"
                android:drawablePadding="5dp"
                android:enabled="false"
                android:gravity="center"
                android:text="哈哈"
                android:textColor="@drawable/radio_notebook_important_textcolor"
                android:textSize="15sp"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
