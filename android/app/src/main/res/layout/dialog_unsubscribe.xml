<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_top_style"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="@string/unsubscribe_tips10"
            android:textColor="@color/color_eb4e4e"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/telphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_13" />

        <LinearLayout
            android:id="@+id/codeLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:background="@drawable/editor"
            android:orientation="horizontal">

            <com.hcs.cityslist.widget.ClearEditText
                android:id="@+id/codeEdit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:maxLength="4"
                android:numeric="integer"
                android:textSize="@dimen/text_size_14" />

            <View
                android:layout_width="1px"
                android:layout_height="25dp"
                android:background="@color/color_dbdbdb" />

            <com.jizhi.jlongg.main.custom.ButtonTouchChangeAlpha
                android:id="@+id/getCodeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/get_unsubscibe_code"
                android:textColor="@color/app_color"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/view"
        style="@style/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/red_button_height"
        android:layout_below="@id/view"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_gray_bottom_round_right"
        android:orientation="horizontal">

        <com.jizhi.jlongg.main.custom.TextViewTouchChangeAlpha
            android:id="@+id/redBtn"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_525c68"
            android:textSize="@dimen/text_size_14" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/color_dbdbdb" />

        <com.jizhi.jlongg.main.custom.TextViewTouchChangeAlpha
            android:id="@+id/btn_asscess"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/assign"
            android:textColor="@color/color_d7252c"
            android:textSize="@dimen/text_size_14" />
    </LinearLayout>


</LinearLayout>