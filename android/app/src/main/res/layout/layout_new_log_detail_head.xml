<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/layout_notice_detail_head"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_fafafa"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <com.jizhi.jongg.widget.RoundeImageHashCodeTextLayout
            android:id="@+id/img_head"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:focusable="false"
            app:riv_border_color="@color/app_color"
            app:riv_border_width="0dip"
            app:riv_corner_radius="@dimen/rect_radius"
            app:riv_oval="false"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_weight="1"
            android:text="name"
            android:textColor="@color/color_628ae0"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="今日：000\n12122"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/margin_12dp"/>

    </LinearLayout>

    <View style="@style/line"/>

    <com.jizhi.jongg.widget.ListViewForScrollView
        android:id="@+id/head_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:divider="@null"
        android:visibility="visible"/>

    <com.jizhi.jlongg.groupimageviews.NineGridMsgImageView
        android:id="@+id/ngl_images"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:cacheColorHint="#00000000"
        android:horizontalSpacing="1dp"
        android:listSelector="#00000000"
        android:visibility="gone"
        app:imgGap="3dp"
        app:maxSize="9"
        app:showStyle="grid"
        app:singleImgSize="250dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="12dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_proName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:text="来自"
            android:textColor="@color/color_eb4e4e"
            android:textSize="@dimen/margin_12dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/icon_from_group_arrow"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f1f1f1"/>

    <RelativeLayout
        android:id="@+id/rea_read_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/tv_hint_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="已读"
            android:textColor="@color/color_333333"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_readinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_hint_read"
            android:textColor="@color/color_999999"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/icon_from_group_arrow"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f1f1f1"/>


    <View style="@style/line"/>
</LinearLayout>