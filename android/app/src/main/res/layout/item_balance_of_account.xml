<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_selector_white_gray"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/catalog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_f1f1f1"
        android:paddingBottom="5dip"
        android:paddingLeft="14dip"
        android:paddingTop="5dip"
        android:textColor="@color/gray_cccccc"
        android:textSize="@dimen/catalog_size"
        android:visibility="gone" />

    <View
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/gray_f1f1f1"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <include layout="@layout/person_info" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gray_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_size_12"
                android:visibility="gone" />

            <com.jizhi.jlongg.main.custom.TextViewTouchChangeAlpha
                android:id="@+id/red_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/red_arroww"
                android:textColor="@color/app_color"
                android:visibility="gone" />

            <com.jizhi.jlongg.main.custom.TextViewTouchChangeAlpha
                android:id="@+id/balance_of_account_btn"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/sk_gy_666666_3radius"
                android:gravity="center"
                android:text="我要对账"
                android:textColor="@color/color_333333"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
