<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray_f1f1f1"
    android:fitsSystemWindows="true"
    android:id="@+id/main"
    android:orientation="vertical">
    <include
        android:id="@+id/head"
        layout="@layout/head_right_text"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="@color/color_fdf1e0">
        <TextView
            android:id="@+id/tv_hint"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:textSize="13sp"
            android:textColor="@color/color_ff6600"
            tools:text="工资标准设置完成后，记工将一直使用该标准，如工资变化请重新设置" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin_name"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/listview_selector_white_gray"
        android:clickable="true"
        android:layout_marginTop="11dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_role"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="班组长"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_14"/>


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:text="名字"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_14"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_dbdbdb"/>

    <LinearLayout
        android:id="@+id/normal_layout"
        android:layout_width="match_parent"
        android:minHeight="50dp"
        android:layout_height="wrap_content"
        android:background="@drawable/listview_selector_white_gray"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上班标准"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_14"/>


        <TextView
            android:id="@+id/normal_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/houtui"
            android:text="8小时算1个工"
            android:textColor="@color/color_eb4e4e"
            android:textSize="@dimen/text_size_14"/>

    </LinearLayout>

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/color_dbdbdb"/>
    <LinearLayout
        android:id="@+id/lin_salary"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工资金额"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_14"/>

        <com.hcs.cityslist.widget.AppCursorEditText
            android:id="@+id/s_tpl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:focusable="true"
            app:decimalStarNumber="0"
            app:decimalEndNumber="0"
            android:inputType="numberDecimal"
            android:hint="请输入工资金额"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical|right"
            android:textColor="@color/color_eb4e4e"
            android:textColorHint="@color/texthintcolor"
            android:textSize="@dimen/text_size_14"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元/个工"
            android:textSize="@dimen/text_size_14"
            android:layout_marginLeft="6dp"
            android:textColor="@color/black_333333"/>

    </LinearLayout>

    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_dbdbdb"/>
    <LinearLayout
        android:id="@+id/work_overtime"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/listview_selector_white_gray"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="加班计算方式"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_14"/>


        <TextView
            android:id="@+id/work_over_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/down_triangle"
            android:text="按工天算加班"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_14"/>

    </LinearLayout>
    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/color_dbdbdb"/>
    <LinearLayout
        android:id="@+id/oneHourSalary"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        tools:visibility="visible"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加班一小时"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_14"/>

        <com.hcs.cityslist.widget.AppCursorEditText
            android:id="@+id/work_overtime_salary"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:focusable="true"
            app:decimalStarNumber="0"
            app:decimalEndNumber="0"
            android:inputType="numberDecimal"
            android:hint="请输入加班一小时的工资"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical|right"
            android:textColor="@color/color_eb4e4e"
            android:textColorHint="@color/texthintcolor"
            android:textSize="@dimen/text_size_14"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元/小时"
            android:textSize="@dimen/text_size_14"
            android:layout_marginLeft="6dp"
            android:textColor="@color/black_333333"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/color_dbdbdb"/>
    <LinearLayout
        android:id="@+id/overtime_layout"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@drawable/listview_selector_white_gray"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="加班标准"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_size_14"/>

        <TextView
            android:id="@+id/overtime_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/houtui"
            android:text="6小时算1个工"
            android:textColor="@color/color_eb4e4e"
            android:textSize="@dimen/text_size_14"/>

    </LinearLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/color_dbdbdb"/>
    <LinearLayout
        android:id="@+id/lin_money"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        tools:visibility="visible"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统根据加班标准自动计算的"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/text_size_12"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="加班一小时"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_salaty"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@null"
            tools:text="50.00"
            android:gravity="right|center_vertical"
            android:textColor="@color/color_eb4e4e"
            android:textSize="@dimen/text_size_14"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元/小时"
            android:textSize="@dimen/text_size_14"
            android:layout_marginLeft="6dp"
            android:textColor="@color/black_333333"/>

    </LinearLayout>
    <Button
        android:id="@+id/save"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/draw_eb4e4e_5radius"
        android:onClick="onClick"
        android:text="@string/assign"
        android:textColor="@color/white"
        android:textSize="@dimen/button_size"/>
</LinearLayout>